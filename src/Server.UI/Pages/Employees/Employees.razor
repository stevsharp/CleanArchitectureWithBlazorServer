    protected override async Task OnInitializedAsync()
    {
        Title = L[_employeeDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<EmployeesAccessRights>(); 
    }
     
    private async Task<GridData<EmployeeDto>> ServerReload(GridState<EmployeeDto> state)
    {
        try
        {
            _loading = true;
            _employeesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _employeesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _employeesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _employeesQuery.PageNumber = state.Page + 1;
            _employeesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_employeesQuery).ConfigureAwait(false);
            return new GridData<EmployeeDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedEmployees.Clear();
        _employeesQuery.Keyword = text;
        await _employeesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(EmployeeListView listview)
    {
        _employeesQuery.ListView = listview;
        await _employeesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        EmployeeCacheKey.Refresh();
        _selectedEmployees.Clear();
        _employeesQuery.Keyword  = string.Empty;
        await _employeesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditEmployeeCommand command)
    {
        var parameters = new DialogParameters<EmployeeFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<EmployeeFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _employeesGrid.ReloadServerData();
            _selectedEmployees.Clear();
        }
    }
    private void OnDataGridRowClick(EmployeeDto dto)
    {
        Navigation.NavigateTo($"/pages/employees/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditEmployeeCommand();
        await ShowEditFormDialog(L["New Employee"], command);
    }
    private async Task OnCloneEmployee()
    {
        var dto = _selectedEmployees.First();
        var command = new AddEditEmployeeCommand()
        {
                    FirstName = dto.FirstName, 
        LastName = dto.LastName, 
        Email = dto.Email, 
        Phone = dto.Phone, 
        Position = dto.Position, 

        };
        await ShowEditFormDialog(L["Clone Employee"], command);
    }
    private async Task OnEditEmployee(EmployeeDto dto)
    {
       //var command = Mapper.Map<AddEditEmployeeCommand>(dto);
       //await ShowEditFormDialog(L["Edit Employee"], command);
       Navigation.NavigateTo($"/pages/employees/edit/{dto.Id}");
