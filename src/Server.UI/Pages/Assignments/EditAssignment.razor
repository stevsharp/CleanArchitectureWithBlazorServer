@page "/pages/assignments/edit/{id:int}"
@using CleanArchitecture.Blazor.Application.Features.Assignments.Commands.Update
@using CleanArchitecture.Blazor.Application.Features.Assignments.Queries.GetById
@using CleanArchitecture.Blazor.Server.UI.Components.Sessions
@* @using CleanArchitecture.Blazor.Server.UI.Components.Fusion *@

@inherits MudComponentBase
@inject IValidationService Validator
@inject IStringLocalizer<Assignments> L
@* @attribute [Authorize(Policy = Permissions.Assignments.Edit)] *@

<PageTitle>@Title</PageTitle>
<Breadcrumbs OnSaveButtonClick="OnSubmit" Saving="_saving" BreadcrumbItems="_breadcrumbItems"></Breadcrumbs>
<MudContainer Class="mt-3" MaxWidth="MaxWidth.Large">
@if (_model != null)
{
    <MudCard Class="pa-2">
        <MudCardHeader>
            <CardHeaderContent>
                 <MudText Typo="Typo.h6">@Title</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
        <ActiveUserSession PageComponent="@($"{nameof(EditAssignment)}/{ _model.Id }")" />
        <MudForm Model="@_model" @ref="@_assignmentForm" Validation="@(Validator.ValidateValue(_model))">
            <MudGrid Spacing="2">
                <MudItem xs="12" md="6"> 
                        <MudNumericField  Label="@L[_model.GetMemberDescription(x=>x.ProjectId)]" @bind-Value="_model.ProjectId" For="@(() => _model.ProjectId)" Min="0" Required="false" RequiredError="@L["project id is required!"]"></MudNumericField >
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <MudNumericField  Label="@L[_model.GetMemberDescription(x=>x.EmployeeId)]" @bind-Value="_model.EmployeeId" For="@(() => _model.EmployeeId)" Min="0" Required="false" RequiredError="@L["employee id is required!"]"></MudNumericField >
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <MudTextField Label="@L[_model.GetMemberDescription(x=>x.Role)]" @bind-Value="_model.Role" For="@(() => _model.Role)" Required="false" RequiredError="@L["role is required!"]"></MudTextField>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <MudDatePicker Label="@L[_model.GetMemberDescription(x=>x.StartDate)]" @bind-Date="_model.StartDate" For="@(() => _model.StartDate)" Required="false" RequiredError="@L["start date is required!"]"></MudDatePicker>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <MudDatePicker Label="@L[_model.GetMemberDescription(x=>x.EndDate)]" @bind-Date="_model.EndDate" For="@(() => _model.EndDate)" Required="false" RequiredError="@L["end date is required!"]"></MudDatePicker>
                </MudItem> 

            </MudGrid>
        </MudForm>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-end gap-2">
                    <MudLoadingButton Color="Color.Primary" DropShadow="false" Loading="@_saving" OnClick="OnSubmit">@ConstantString.Save</MudLoadingButton>
        </MudCardActions>
        </MudCard>
    }
</MudContainer>
 

@code {
    public string? Title { get; private set; }
    [Parameter]
    public int Id { get; set; }
    MudForm? _assignmentForm;
    private bool _saving = false;
    private List<BreadcrumbItem>? _breadcrumbItems;
    private UpdateAssignmentCommand? _model;
    protected override async Task OnInitializedAsync()
    {
        Title = L["Edit Assignment"];
        _breadcrumbItems = new List<BreadcrumbItem>
        {
            new BreadcrumbItem(L["Home"], href: "/"),
            new BreadcrumbItem(L["Assignments"], href: "/pages/assignments")
        };
        var result = await Mediator.Send(new GetAssignmentByIdQuery() { Id = Id });
        result.Map(data =>
        {
            _model = Mapper.Map<UpdateAssignmentCommand>(data);
            return data;
        }).Match(data =>
        {
            _breadcrumbItems.Add(new BreadcrumbItem(data.Id.ToString(), href: $"/pages/assignments/edit/{Id}"));
        }, errors =>
        {
            Snackbar.Add($"{errors}", Severity.Error);
        });

    }
    async Task OnSubmit()
    {
        try
        {
            _saving = true;
            await _assignmentForm!.Validate().ConfigureAwait(false);
            if (!_assignmentForm!.IsValid)
                return;
            var result = await Mediator.Send(_model);
            result.Match(
                data=>
                {
                    Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
                },
                errors=>
                {
                    Snackbar.Add(errors, MudBlazor.Severity.Error);
                });
        }
        finally
        {
            _saving = false;
        }
    }
}
