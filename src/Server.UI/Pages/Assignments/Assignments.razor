    private async Task<GridData<AssignmentDto>> ServerReload(GridState<AssignmentDto> state)
    {
        try
        {
            _loading = true;
            _assignmentsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _assignmentsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _assignmentsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _assignmentsQuery.PageNumber = state.Page + 1;
            _assignmentsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_assignmentsQuery).ConfigureAwait(false);
            return new GridData<AssignmentDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedAssignments.Clear();
        _assignmentsQuery.Keyword = text;
        await _assignmentsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(AssignmentListView listview)
    {
        _assignmentsQuery.ListView = listview;
        await _assignmentsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        AssignmentCacheKey.Refresh();
        _selectedAssignments.Clear();
        _assignmentsQuery.Keyword  = string.Empty;
        await _assignmentsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditAssignmentCommand command)
    {
        var parameters = new DialogParameters<AssignmentFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<AssignmentFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _assignmentsGrid.ReloadServerData();
            _selectedAssignments.Clear();
        }
    }
    private void OnDataGridRowClick(AssignmentDto dto)
    {
        Navigation.NavigateTo($"/pages/assignments/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditAssignmentCommand();
        await ShowEditFormDialog(L["New Assignment"], command);
    }
    private async Task OnCloneAssignment()
    {
        var dto = _selectedAssignments.First();
        var command = new AddEditAssignmentCommand()
        {
                    ProjectId = dto.ProjectId, 
        EmployeeId = dto.EmployeeId, 
        Role = dto.Role, 
        StartDate = dto.StartDate, 
        EndDate = dto.EndDate, 

        };
        await ShowEditFormDialog(L["Clone Assignment"], command);
    }
    private async Task OnEditAssignment(AssignmentDto dto)
    {
       //var command = Mapper.Map<AddEditAssignmentCommand>(dto);
       //await ShowEditFormDialog(L["Edit Assignment"], command);
       Navigation.NavigateTo($"/pages/assignments/edit/{dto.Id}");
    }

    private async Task OnDeleteAssignment(AssignmentDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id.ToString());
        var command = new DeleteAssignmentCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _assignmentsGrid.ReloadServerData();
                _selectedAssignments.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedAssignments()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedAssignments.Count);
        var command = new DeleteAssignmentCommand(_selectedAssignments.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _assignmentsGrid.ReloadServerData();
                _selectedAssignments.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportAssignmentsQuery()
            {
                Keyword = _assignmentsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _assignmentsQuery.ListView,
                OrderBy = _assignmentsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_assignmentsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["Assignments"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
