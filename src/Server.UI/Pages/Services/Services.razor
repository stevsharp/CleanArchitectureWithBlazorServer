@page "/pages/services"

@using CleanArchitecture.Blazor.Application.Features.Services.Caching
@using CleanArchitecture.Blazor.Application.Features.Services.DTOs
@using CleanArchitecture.Blazor.Application.Features.Services.Specifications
@using CleanArchitecture.Blazor.Application.Features.Services.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Services.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Services.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Services.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Services.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.Services.Components

@inject IStringLocalizer<Services> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Services.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="ServiceDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedServices"
                  Hover="true" @ref="_servicesGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="ServiceListView" ValueChanged="OnListViewChanged" Value="_servicesQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedServices.Count != 1)" OnClick="OnCloneService">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedServices.Count > 0))"
                                         OnClick="OnDeleteSelectedServices">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_servicesQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditService(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteService(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                <PropertyColumn Property="x => x.Name" Title="@L[_serviceDto.GetMemberDescription(x=>x.Name)]"> 
   <CellTemplate>
      <div class="d-flex flex-column">
        <MudText Typo="Typo.body1">@context.Item.Name</MudText>
        <MudText Typo="Typo.body2" Class="mud-text-secondary">@context.Item.Description</MudText>
     </div>
    </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.ServiceCategoryId" Title="@L[_serviceDto.GetMemberDescription(x=>x.ServiceCategoryId)]" />
                <PropertyColumn Property="x => x.DefaultPricingModel" Title="@L[_serviceDto.GetMemberDescription(x=>x.DefaultPricingModel)]">
                <CellTemplate>
						<MudChip T="string"  Value="@context.Item.DefaultPricingModel?.GetDescription()" />
                </CellTemplate>
</PropertyColumn>

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<ServiceDto> _selectedServices = new HashSet<ServiceDto>();
    private MudDataGrid<ServiceDto> _servicesGrid = default!;
    private ServiceDto _serviceDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private ServicesWithPaginationQuery _servicesQuery { get; set; } = new();
    private ServicesAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_serviceDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<ServicesAccessRights>(); 
    }
     
    private async Task<GridData<ServiceDto>> ServerReload(GridState<ServiceDto> state)
    {
        try
        {
            _loading = true;
            _servicesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _servicesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _servicesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _servicesQuery.PageNumber = state.Page + 1;
            _servicesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_servicesQuery).ConfigureAwait(false);
            return new GridData<ServiceDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedServices.Clear();
        _servicesQuery.Keyword = text;
        await _servicesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(ServiceListView listview)
    {
        _servicesQuery.ListView = listview;
        await _servicesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        ServiceCacheKey.Refresh();
        _selectedServices.Clear();
        _servicesQuery.Keyword  = string.Empty;
        await _servicesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditServiceCommand command)
    {
        var parameters = new DialogParameters<ServiceFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ServiceFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _servicesGrid.ReloadServerData();
            _selectedServices.Clear();
        }
    }
    private void OnDataGridRowClick(ServiceDto dto)
    {
        Navigation.NavigateTo($"/pages/services/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditServiceCommand();
        await ShowEditFormDialog(L["New Service"], command);
    }
    private async Task OnCloneService()
    {
        var dto = _selectedServices.First();
        var command = new AddEditServiceCommand()
        {
                    ServiceCategoryId = dto.ServiceCategoryId, 
        Name = dto.Name, 
        Description = dto.Description, 
        DefaultPricingModel = dto.DefaultPricingModel, 

        };
        await ShowEditFormDialog(L["Clone Service"], command);
    }
    private async Task OnEditService(ServiceDto dto)
    {
       //var command = Mapper.Map<AddEditServiceCommand>(dto);
       //await ShowEditFormDialog(L["Edit Service"], command);
       Navigation.NavigateTo($"/pages/services/edit/{dto.Id}");
    }

    private async Task OnDeleteService(ServiceDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteServiceCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicesGrid.ReloadServerData();
                _selectedServices.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedServices()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedServices.Count);
        var command = new DeleteServiceCommand(_selectedServices.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicesGrid.ReloadServerData();
                _selectedServices.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportServicesQuery()
            {
                Keyword = _servicesQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _servicesQuery.ListView,
                OrderBy = _servicesGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_servicesGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["Services"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportServicesCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _servicesGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
