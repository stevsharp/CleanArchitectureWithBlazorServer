@page "/pages/venues"

@using CleanArchitecture.Blazor.Application.Features.Venues.Caching
@using CleanArchitecture.Blazor.Application.Features.Venues.DTOs
@using CleanArchitecture.Blazor.Application.Features.Venues.Specifications
@using CleanArchitecture.Blazor.Application.Features.Venues.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Venues.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Venues.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Venues.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Venues.Commands.AddEdit
@using CleanArchitecture.Blazor.Infrastructure.PermissionSet
@using CleanArchitecture.Blazor.Server.UI.Pages.Venues.Components

@inject IStringLocalizer<Venues> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@* @attribute [Authorize(Policy = Permissions.Venues.View)] *@
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="VenueDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedVenues"
                  Hover="true" @ref="_venuesGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="VenueListView" ValueChanged="OnListViewChanged" Value="_venuesQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedVenues.Count != 1)" OnClick="OnCloneVenue">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedVenues.Count > 0))"
                                         OnClick="OnDeleteSelectedVenues">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_venuesQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditVenue(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteVenue(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                <PropertyColumn Property="x => x.Name" Title="@L[_venueDto.GetMemberDescription(x=>x.Name)]"> 
   <CellTemplate>
      <div class="d-flex flex-column">
        <MudText Typo="Typo.body1">@context.Item.Name</MudText>
     </div>
    </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.Location" Title="@L[_venueDto.GetMemberDescription(x=>x.Location)]" />
                <PropertyColumn Property="x => x.Capacity" Title="@L[_venueDto.GetMemberDescription(x=>x.Capacity)]" />
                <PropertyColumn Property="x => x.VenueFee" Title="@L[_venueDto.GetMemberDescription(x=>x.VenueFee)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<VenueDto> _selectedVenues = new HashSet<VenueDto>();
    private MudDataGrid<VenueDto> _venuesGrid = default!;
    private VenueDto _venueDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private VenuesWithPaginationQuery _venuesQuery { get; set; } = new();
    private VenuesAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_venueDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<VenuesAccessRights>(); 
    }
     
    private async Task<GridData<VenueDto>> ServerReload(GridState<VenueDto> state)
    {
        try
        {
            _loading = true;
            _venuesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _venuesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _venuesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _venuesQuery.PageNumber = state.Page + 1;
            _venuesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_venuesQuery).ConfigureAwait(false);
            return new GridData<VenueDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedVenues.Clear();
        _venuesQuery.Keyword = text;
        await _venuesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(VenueListView listview)
    {
        _venuesQuery.ListView = listview;
        await _venuesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        VenueCacheKey.Refresh();
        _selectedVenues.Clear();
        _venuesQuery.Keyword  = string.Empty;
        await _venuesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditVenueCommand command)
    {
        var parameters = new DialogParameters<VenueFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<VenueFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _venuesGrid.ReloadServerData();
            _selectedVenues.Clear();
        }
    }
    private void OnDataGridRowClick(VenueDto dto)
    {
        Navigation.NavigateTo($"/pages/venues/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditVenueCommand();
        await ShowEditFormDialog(L["New Venue"], command);
    }
    private async Task OnCloneVenue()
    {
        var dto = _selectedVenues.First();
        var command = new AddEditVenueCommand()
        {
                    Name = dto.Name, 
        Location = dto.Location, 
        Capacity = dto.Capacity, 
        VenueFee = dto.VenueFee, 

        };
        await ShowEditFormDialog(L["Clone Venue"], command);
    }
    private async Task OnEditVenue(VenueDto dto)
    {
       //var command = Mapper.Map<AddEditVenueCommand>(dto);
       //await ShowEditFormDialog(L["Edit Venue"], command);
       Navigation.NavigateTo($"/pages/venues/edit/{dto.Id}");
    }

    private async Task OnDeleteVenue(VenueDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteVenueCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _venuesGrid.ReloadServerData();
                _selectedVenues.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedVenues()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedVenues.Count);
        var command = new DeleteVenueCommand(_selectedVenues.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _venuesGrid.ReloadServerData();
                _selectedVenues.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportVenuesQuery()
            {
                Keyword = _venuesQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _venuesQuery.ListView,
                OrderBy = _venuesGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_venuesGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["Venues"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportVenuesCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _venuesGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
