@page "/pages/quoteattachments"

@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Caching
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.DTOs
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Specifications
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.QuoteAttachments.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.QuoteAttachments.Components

@inject IStringLocalizer<QuoteAttachments> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.QuoteAttachments.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="QuoteAttachmentDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedQuoteAttachments"
                  Hover="true" @ref="_quoteattachmentsGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="QuoteAttachmentListView" ValueChanged="OnListViewChanged" Value="_quoteattachmentsQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedQuoteAttachments.Count != 1)" OnClick="OnCloneQuoteAttachment">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedQuoteAttachments.Count > 0))"
                                         OnClick="OnDeleteSelectedQuoteAttachments">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_quoteattachmentsQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditQuoteAttachment(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteQuoteAttachment(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                                <PropertyColumn Property="x => x.QuoteId" Title="@L[_quoteattachmentDto.GetMemberDescription(x=>x.QuoteId)]" />
                <PropertyColumn Property="x => x.FileName" Title="@L[_quoteattachmentDto.GetMemberDescription(x=>x.FileName)]" />
                <PropertyColumn Property="x => x.FilePath" Title="@L[_quoteattachmentDto.GetMemberDescription(x=>x.FilePath)]" />
                <PropertyColumn Property="x => x.UploadedAtUtc" Title="@L[_quoteattachmentDto.GetMemberDescription(x=>x.UploadedAtUtc)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<QuoteAttachmentDto> _selectedQuoteAttachments = new HashSet<QuoteAttachmentDto>();
    private MudDataGrid<QuoteAttachmentDto> _quoteattachmentsGrid = default!;
    private QuoteAttachmentDto _quoteattachmentDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private QuoteAttachmentsWithPaginationQuery _quoteattachmentsQuery { get; set; } = new();
    private QuoteAttachmentsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_quoteattachmentDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<QuoteAttachmentsAccessRights>(); 
    }
     
    private async Task<GridData<QuoteAttachmentDto>> ServerReload(GridState<QuoteAttachmentDto> state)
    {
        try
        {
            _loading = true;
            _quoteattachmentsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _quoteattachmentsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _quoteattachmentsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _quoteattachmentsQuery.PageNumber = state.Page + 1;
            _quoteattachmentsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_quoteattachmentsQuery).ConfigureAwait(false);
            return new GridData<QuoteAttachmentDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedQuoteAttachments.Clear();
        _quoteattachmentsQuery.Keyword = text;
        await _quoteattachmentsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(QuoteAttachmentListView listview)
    {
        _quoteattachmentsQuery.ListView = listview;
        await _quoteattachmentsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        QuoteAttachmentCacheKey.Refresh();
        _selectedQuoteAttachments.Clear();
        _quoteattachmentsQuery.Keyword  = string.Empty;
        await _quoteattachmentsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditQuoteAttachmentCommand command)
    {
        var parameters = new DialogParameters<QuoteAttachmentFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<QuoteAttachmentFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _quoteattachmentsGrid.ReloadServerData();
            _selectedQuoteAttachments.Clear();
        }
    }
    private void OnDataGridRowClick(QuoteAttachmentDto dto)
    {
        Navigation.NavigateTo($"/pages/quoteattachments/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditQuoteAttachmentCommand();
        await ShowEditFormDialog(L["New QuoteAttachment"], command);
    }
    private async Task OnCloneQuoteAttachment()
    {
        var dto = _selectedQuoteAttachments.First();
        var command = new AddEditQuoteAttachmentCommand()
        {
                    QuoteId = dto.QuoteId, 
        FileName = dto.FileName, 
        FilePath = dto.FilePath, 
        UploadedAtUtc = dto.UploadedAtUtc, 

        };
        await ShowEditFormDialog(L["Clone QuoteAttachment"], command);
    }
    private async Task OnEditQuoteAttachment(QuoteAttachmentDto dto)
    {
       //var command = Mapper.Map<AddEditQuoteAttachmentCommand>(dto);
       //await ShowEditFormDialog(L["Edit QuoteAttachment"], command);
       Navigation.NavigateTo($"/pages/quoteattachments/edit/{dto.Id}");
    }

    private async Task OnDeleteQuoteAttachment(QuoteAttachmentDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteQuoteAttachmentCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteattachmentsGrid.ReloadServerData();
                _selectedQuoteAttachments.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedQuoteAttachments()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedQuoteAttachments.Count);
        var command = new DeleteQuoteAttachmentCommand(_selectedQuoteAttachments.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteattachmentsGrid.ReloadServerData();
                _selectedQuoteAttachments.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportQuoteAttachmentsQuery()
            {
                Keyword = _quoteattachmentsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _quoteattachmentsQuery.ListView,
                OrderBy = _quoteattachmentsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_quoteattachmentsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["QuoteAttachments"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportQuoteAttachmentsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _quoteattachmentsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
