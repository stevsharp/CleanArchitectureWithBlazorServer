       //await ShowEditFormDialog(L["Edit QuoteApproval"], command);
       Navigation.NavigateTo($"/pages/quoteapprovals/edit/{dto.Id}");
    }

    private async Task OnDeleteQuoteApproval(QuoteApprovalDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id.ToString());
        var command = new DeleteQuoteApprovalCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteapprovalsGrid.ReloadServerData();
                _selectedQuoteApprovals.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedQuoteApprovals()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedQuoteApprovals.Count);
        var command = new DeleteQuoteApprovalCommand(_selectedQuoteApprovals.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteapprovalsGrid.ReloadServerData();
                _selectedQuoteApprovals.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportQuoteApprovalsQuery()
            {
                Keyword = _quoteapprovalsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _quoteapprovalsQuery.ListView,
                OrderBy = _quoteapprovalsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_quoteapprovalsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["QuoteApprovals"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
