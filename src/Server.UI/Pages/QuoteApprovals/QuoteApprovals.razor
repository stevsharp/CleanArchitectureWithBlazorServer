    private async Task<GridData<QuoteApprovalDto>> ServerReload(GridState<QuoteApprovalDto> state)
    {
        try
        {
            _loading = true;
            _quoteapprovalsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _quoteapprovalsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _quoteapprovalsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _quoteapprovalsQuery.PageNumber = state.Page + 1;
            _quoteapprovalsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_quoteapprovalsQuery).ConfigureAwait(false);
            return new GridData<QuoteApprovalDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedQuoteApprovals.Clear();
        _quoteapprovalsQuery.Keyword = text;
        await _quoteapprovalsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(QuoteApprovalListView listview)
    {
        _quoteapprovalsQuery.ListView = listview;
        await _quoteapprovalsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        QuoteApprovalCacheKey.Refresh();
        _selectedQuoteApprovals.Clear();
        _quoteapprovalsQuery.Keyword  = string.Empty;
        await _quoteapprovalsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditQuoteApprovalCommand command)
    {
        var parameters = new DialogParameters<QuoteApprovalFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<QuoteApprovalFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _quoteapprovalsGrid.ReloadServerData();
            _selectedQuoteApprovals.Clear();
        }
    }
    private void OnDataGridRowClick(QuoteApprovalDto dto)
    {
        Navigation.NavigateTo($"/pages/quoteapprovals/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditQuoteApprovalCommand();
        await ShowEditFormDialog(L["New QuoteApproval"], command);
    }
    private async Task OnCloneQuoteApproval()
    {
        var dto = _selectedQuoteApprovals.First();
        var command = new AddEditQuoteApprovalCommand()
        {
                    QuoteId = dto.QuoteId, 
        ApproverId = dto.ApproverId, 
        ApprovedAtUtc = dto.ApprovedAtUtc, 
        Comment = dto.Comment, 
        Status = dto.Status, 

        };
        await ShowEditFormDialog(L["Clone QuoteApproval"], command);
    }
    private async Task OnEditQuoteApproval(QuoteApprovalDto dto)
    {
