    protected override async Task OnInitializedAsync()
    {
        Title = L[_servicevariantDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<ServiceVariantsAccessRights>(); 
    }
     
    private async Task<GridData<ServiceVariantDto>> ServerReload(GridState<ServiceVariantDto> state)
    {
        try
        {
            _loading = true;
            _servicevariantsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _servicevariantsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _servicevariantsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _servicevariantsQuery.PageNumber = state.Page + 1;
            _servicevariantsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_servicevariantsQuery).ConfigureAwait(false);
            return new GridData<ServiceVariantDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedServiceVariants.Clear();
        _servicevariantsQuery.Keyword = text;
        await _servicevariantsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(ServiceVariantListView listview)
    {
        _servicevariantsQuery.ListView = listview;
        await _servicevariantsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        ServiceVariantCacheKey.Refresh();
        _selectedServiceVariants.Clear();
        _servicevariantsQuery.Keyword  = string.Empty;
        await _servicevariantsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditServiceVariantCommand command)
    {
        var parameters = new DialogParameters<ServiceVariantFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ServiceVariantFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _servicevariantsGrid.ReloadServerData();
            _selectedServiceVariants.Clear();
        }
    }
    private void OnDataGridRowClick(ServiceVariantDto dto)
    {
        Navigation.NavigateTo($"/pages/servicevariants/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditServiceVariantCommand();
        await ShowEditFormDialog(L["New ServiceVariant"], command);
    }
    private async Task OnCloneServiceVariant()
    {
        var dto = _selectedServiceVariants.First();
        var command = new AddEditServiceVariantCommand()
        {
                    ServiceId = dto.ServiceId, 
        Name = dto.Name, 
        Unit = dto.Unit, 
        ComplexityLevel = dto.ComplexityLevel, 
        BasePrice = dto.BasePrice, 

        };
        await ShowEditFormDialog(L["Clone ServiceVariant"], command);
    }
    private async Task OnEditServiceVariant(ServiceVariantDto dto)
    {
       //var command = Mapper.Map<AddEditServiceVariantCommand>(dto);
       //await ShowEditFormDialog(L["Edit ServiceVariant"], command);
       Navigation.NavigateTo($"/pages/servicevariants/edit/{dto.Id}");
    }

    private async Task OnDeleteServiceVariant(ServiceVariantDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteServiceVariantCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicevariantsGrid.ReloadServerData();
                _selectedServiceVariants.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedServiceVariants()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedServiceVariants.Count);
        var command = new DeleteServiceVariantCommand(_selectedServiceVariants.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicevariantsGrid.ReloadServerData();
                _selectedServiceVariants.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportServiceVariantsQuery()
            {
                Keyword = _servicevariantsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _servicevariantsQuery.ListView,
                OrderBy = _servicevariantsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_servicevariantsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["ServiceVariants"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
