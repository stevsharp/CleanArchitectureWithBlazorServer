@page "/pages/quotelines"

@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Caching
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.DTOs
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Specifications
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.QuoteLines.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.QuoteLines.Components

@inject IStringLocalizer<QuoteLines> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.QuoteLines.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="QuoteLineDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedQuoteLines"
                  Hover="true" @ref="_quotelinesGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="QuoteLineListView" ValueChanged="OnListViewChanged" Value="_quotelinesQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedQuoteLines.Count != 1)" OnClick="OnCloneQuoteLine">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedQuoteLines.Count > 0))"
                                         OnClick="OnDeleteSelectedQuoteLines">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_quotelinesQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditQuoteLine(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteQuoteLine(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                                <PropertyColumn Property="x => x.QuoteVersionId" Title="@L[_quotelineDto.GetMemberDescription(x=>x.QuoteVersionId)]" />
                <PropertyColumn Property="x => x.ServiceId" Title="@L[_quotelineDto.GetMemberDescription(x=>x.ServiceId)]" />
                <PropertyColumn Property="x => x.VariantId" Title="@L[_quotelineDto.GetMemberDescription(x=>x.VariantId)]" />
                <PropertyColumn Property="x => x.PricingModel" Title="@L[_quotelineDto.GetMemberDescription(x=>x.PricingModel)]">
                <CellTemplate>
						<MudChip T="string"  Value="@context.Item.PricingModel?.GetDescription()" />
                </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.Qty" Title="@L[_quotelineDto.GetMemberDescription(x=>x.Qty)]" />
                <PropertyColumn Property="x => x.UnitPrice" Title="@L[_quotelineDto.GetMemberDescription(x=>x.UnitPrice)]" />
                <PropertyColumn Property="x => x.LineTotal" Title="@L[_quotelineDto.GetMemberDescription(x=>x.LineTotal)]" />
                <PropertyColumn Property="x => x.VenueId" Title="@L[_quotelineDto.GetMemberDescription(x=>x.VenueId)]" />
                <PropertyColumn Property="x => x.Pax" Title="@L[_quotelineDto.GetMemberDescription(x=>x.Pax)]" />
                <PropertyColumn Property="x => x.MediaBudget" Title="@L[_quotelineDto.GetMemberDescription(x=>x.MediaBudget)]" />
                <PropertyColumn Property="x => x.AgencyFeePct" Title="@L[_quotelineDto.GetMemberDescription(x=>x.AgencyFeePct)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
