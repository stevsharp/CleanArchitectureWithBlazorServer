    protected override async Task OnInitializedAsync()
    {
        Title = L[_quotelineDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<QuoteLinesAccessRights>(); 
    }
     
    private async Task<GridData<QuoteLineDto>> ServerReload(GridState<QuoteLineDto> state)
    {
        try
        {
            _loading = true;
            _quotelinesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _quotelinesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _quotelinesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _quotelinesQuery.PageNumber = state.Page + 1;
            _quotelinesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_quotelinesQuery).ConfigureAwait(false);
            return new GridData<QuoteLineDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedQuoteLines.Clear();
        _quotelinesQuery.Keyword = text;
        await _quotelinesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(QuoteLineListView listview)
    {
        _quotelinesQuery.ListView = listview;
        await _quotelinesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        QuoteLineCacheKey.Refresh();
        _selectedQuoteLines.Clear();
        _quotelinesQuery.Keyword  = string.Empty;
        await _quotelinesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditQuoteLineCommand command)
    {
        var parameters = new DialogParameters<QuoteLineFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<QuoteLineFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _quotelinesGrid.ReloadServerData();
            _selectedQuoteLines.Clear();
        }
    }
    private void OnDataGridRowClick(QuoteLineDto dto)
    {
        Navigation.NavigateTo($"/pages/quotelines/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditQuoteLineCommand();
        await ShowEditFormDialog(L["New QuoteLine"], command);
    }
    private async Task OnCloneQuoteLine()
    {
        var dto = _selectedQuoteLines.First();
        var command = new AddEditQuoteLineCommand()
        {
                    QuoteVersionId = dto.QuoteVersionId, 
        ServiceId = dto.ServiceId, 
        VariantId = dto.VariantId, 
        Qty = dto.Qty, 
        UnitPrice = dto.UnitPrice, 
        LineTotal = dto.LineTotal, 
        VenueId = dto.VenueId, 
        Pax = dto.Pax, 
        MediaBudget = dto.MediaBudget, 
        AgencyFeePct = dto.AgencyFeePct, 
        PricingModel = dto.PricingModel, 

        };
        await ShowEditFormDialog(L["Clone QuoteLine"], command);
    }
    private async Task OnEditQuoteLine(QuoteLineDto dto)
    {
       //var command = Mapper.Map<AddEditQuoteLineCommand>(dto);
       //await ShowEditFormDialog(L["Edit QuoteLine"], command);
       Navigation.NavigateTo($"/pages/quotelines/edit/{dto.Id}");
    }

    private async Task OnDeleteQuoteLine(QuoteLineDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id.ToString());
        var command = new DeleteQuoteLineCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quotelinesGrid.ReloadServerData();
                _selectedQuoteLines.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedQuoteLines()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedQuoteLines.Count);
        var command = new DeleteQuoteLineCommand(_selectedQuoteLines.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quotelinesGrid.ReloadServerData();
                _selectedQuoteLines.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportQuoteLinesQuery()
            {
                Keyword = _quotelinesQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _quotelinesQuery.ListView,
                OrderBy = _quotelinesGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_quotelinesGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["QuoteLines"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
