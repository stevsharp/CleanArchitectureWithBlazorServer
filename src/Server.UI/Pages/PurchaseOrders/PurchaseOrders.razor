    }
     
    private async Task<GridData<PurchaseOrderDto>> ServerReload(GridState<PurchaseOrderDto> state)
    {
        try
        {
            _loading = true;
            _purchaseordersQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _purchaseordersQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _purchaseordersQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _purchaseordersQuery.PageNumber = state.Page + 1;
            _purchaseordersQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_purchaseordersQuery).ConfigureAwait(false);
            return new GridData<PurchaseOrderDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedPurchaseOrders.Clear();
        _purchaseordersQuery.Keyword = text;
        await _purchaseordersGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(PurchaseOrderListView listview)
    {
        _purchaseordersQuery.ListView = listview;
        await _purchaseordersGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        PurchaseOrderCacheKey.Refresh();
        _selectedPurchaseOrders.Clear();
        _purchaseordersQuery.Keyword  = string.Empty;
        await _purchaseordersGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditPurchaseOrderCommand command)
    {
        var parameters = new DialogParameters<PurchaseOrderFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<PurchaseOrderFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _purchaseordersGrid.ReloadServerData();
            _selectedPurchaseOrders.Clear();
        }
    }
    private void OnDataGridRowClick(PurchaseOrderDto dto)
    {
        Navigation.NavigateTo($"/pages/purchaseorders/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditPurchaseOrderCommand();
        await ShowEditFormDialog(L["New PurchaseOrder"], command);
    }
    private async Task OnClonePurchaseOrder()
    {
        var dto = _selectedPurchaseOrders.First();
        var command = new AddEditPurchaseOrderCommand()
        {
                    VendorId = dto.VendorId, 
        ProjectId = dto.ProjectId, 
        Amount = dto.Amount, 
        Date = dto.Date, 
        ExternalNumber = dto.ExternalNumber, 
        Notes = dto.Notes, 
        Status = dto.Status, 

        };
        await ShowEditFormDialog(L["Clone PurchaseOrder"], command);
    }
    private async Task OnEditPurchaseOrder(PurchaseOrderDto dto)
    {
       //var command = Mapper.Map<AddEditPurchaseOrderCommand>(dto);
       //await ShowEditFormDialog(L["Edit PurchaseOrder"], command);
       Navigation.NavigateTo($"/pages/purchaseorders/edit/{dto.Id}");
