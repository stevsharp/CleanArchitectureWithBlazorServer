    private async Task OnDeletePurchaseOrder(PurchaseOrderDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id.ToString());
        var command = new DeletePurchaseOrderCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _purchaseordersGrid.ReloadServerData();
                _selectedPurchaseOrders.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedPurchaseOrders()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedPurchaseOrders.Count);
        var command = new DeletePurchaseOrderCommand(_selectedPurchaseOrders.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _purchaseordersGrid.ReloadServerData();
                _selectedPurchaseOrders.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportPurchaseOrdersQuery()
            {
                Keyword = _purchaseordersQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _purchaseordersQuery.ListView,
                OrderBy = _purchaseordersGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_purchaseordersGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["PurchaseOrders"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
