    protected override async Task OnInitializedAsync()
    {
        Title = L[_projecttaskDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<ProjectTasksAccessRights>(); 
    }
     
    private async Task<GridData<ProjectTaskDto>> ServerReload(GridState<ProjectTaskDto> state)
    {
        try
        {
            _loading = true;
            _projecttasksQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _projecttasksQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _projecttasksQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _projecttasksQuery.PageNumber = state.Page + 1;
            _projecttasksQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_projecttasksQuery).ConfigureAwait(false);
            return new GridData<ProjectTaskDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedProjectTasks.Clear();
        _projecttasksQuery.Keyword = text;
        await _projecttasksGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(ProjectTaskListView listview)
    {
        _projecttasksQuery.ListView = listview;
        await _projecttasksGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        ProjectTaskCacheKey.Refresh();
        _selectedProjectTasks.Clear();
        _projecttasksQuery.Keyword  = string.Empty;
        await _projecttasksGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditProjectTaskCommand command)
    {
        var parameters = new DialogParameters<ProjectTaskFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ProjectTaskFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _projecttasksGrid.ReloadServerData();
            _selectedProjectTasks.Clear();
        }
    }
    private void OnDataGridRowClick(ProjectTaskDto dto)
    {
        Navigation.NavigateTo($"/pages/projecttasks/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditProjectTaskCommand();
        await ShowEditFormDialog(L["New ProjectTask"], command);
    }
    private async Task OnCloneProjectTask()
    {
        var dto = _selectedProjectTasks.First();
        var command = new AddEditProjectTaskCommand()
        {
                    ProjectId = dto.ProjectId, 
        AssignedToId = dto.AssignedToId, 
        Title = dto.Title, 
        Description = dto.Description, 
        Deadline = dto.Deadline, 
        Status = dto.Status, 
        Priority = dto.Priority, 

        };
        await ShowEditFormDialog(L["Clone ProjectTask"], command);
    }
    private async Task OnEditProjectTask(ProjectTaskDto dto)
    {
       //var command = Mapper.Map<AddEditProjectTaskCommand>(dto);
       //await ShowEditFormDialog(L["Edit ProjectTask"], command);
       Navigation.NavigateTo($"/pages/projecttasks/edit/{dto.Id}");
    }

    private async Task OnDeleteProjectTask(ProjectTaskDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Id.ToString());
        var command = new DeleteProjectTaskCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _projecttasksGrid.ReloadServerData();
                _selectedProjectTasks.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedProjectTasks()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedProjectTasks.Count);
        var command = new DeleteProjectTaskCommand(_selectedProjectTasks.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _projecttasksGrid.ReloadServerData();
                _selectedProjectTasks.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportProjectTasksQuery()
            {
                Keyword = _projecttasksQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _projecttasksQuery.ListView,
                OrderBy = _projecttasksGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_projecttasksGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["ProjectTasks"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
