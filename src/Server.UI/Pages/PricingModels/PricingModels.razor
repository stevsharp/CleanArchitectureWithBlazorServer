        Title = L[_pricingmodelDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<PricingModelsAccessRights>(); 
    }
     
    private async Task<GridData<PricingModelDto>> ServerReload(GridState<PricingModelDto> state)
    {
        try
        {
            _loading = true;
            _pricingmodelsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _pricingmodelsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _pricingmodelsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _pricingmodelsQuery.PageNumber = state.Page + 1;
            _pricingmodelsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_pricingmodelsQuery).ConfigureAwait(false);
            return new GridData<PricingModelDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedPricingModels.Clear();
        _pricingmodelsQuery.Keyword = text;
        await _pricingmodelsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(PricingModelListView listview)
    {
        _pricingmodelsQuery.ListView = listview;
        await _pricingmodelsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        PricingModelCacheKey.Refresh();
        _selectedPricingModels.Clear();
        _pricingmodelsQuery.Keyword  = string.Empty;
        await _pricingmodelsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditPricingModelCommand command)
    {
        var parameters = new DialogParameters<PricingModelFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<PricingModelFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _pricingmodelsGrid.ReloadServerData();
            _selectedPricingModels.Clear();
        }
    }
    private void OnDataGridRowClick(PricingModelDto dto)
    {
        Navigation.NavigateTo($"/pages/pricingmodels/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditPricingModelCommand();
        await ShowEditFormDialog(L["New PricingModel"], command);
    }
    private async Task OnClonePricingModel()
    {
        var dto = _selectedPricingModels.First();
        var command = new AddEditPricingModelCommand()
        {
                    Name = dto.Name, 
        FormulaExpression = dto.FormulaExpression, 
        MinFee = dto.MinFee, 
        Notes = dto.Notes, 
        Type = dto.Type, 

        };
        await ShowEditFormDialog(L["Clone PricingModel"], command);
    }
    private async Task OnEditPricingModel(PricingModelDto dto)
    {
       //var command = Mapper.Map<AddEditPricingModelCommand>(dto);
       //await ShowEditFormDialog(L["Edit PricingModel"], command);
       Navigation.NavigateTo($"/pages/pricingmodels/edit/{dto.Id}");
    }

    private async Task OnDeletePricingModel(PricingModelDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeletePricingModelCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _pricingmodelsGrid.ReloadServerData();
                _selectedPricingModels.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedPricingModels()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedPricingModels.Count);
        var command = new DeletePricingModelCommand(_selectedPricingModels.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _pricingmodelsGrid.ReloadServerData();
                _selectedPricingModels.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportPricingModelsQuery()
            {
                Keyword = _pricingmodelsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _pricingmodelsQuery.ListView,
                OrderBy = _pricingmodelsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_pricingmodelsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["PricingModels"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
