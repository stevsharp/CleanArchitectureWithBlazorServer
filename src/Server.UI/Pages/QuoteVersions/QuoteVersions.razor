@page "/pages/quoteversions"

@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Caching
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.DTOs
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Specifications
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.QuoteVersions.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.QuoteVersions.Components

@inject IStringLocalizer<QuoteVersions> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.QuoteVersions.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="QuoteVersionDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedQuoteVersions"
                  Hover="true" @ref="_quoteversionsGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="QuoteVersionListView" ValueChanged="OnListViewChanged" Value="_quoteversionsQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedQuoteVersions.Count != 1)" OnClick="OnCloneQuoteVersion">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedQuoteVersions.Count > 0))"
                                         OnClick="OnDeleteSelectedQuoteVersions">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_quoteversionsQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditQuoteVersion(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteQuoteVersion(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                                <PropertyColumn Property="x => x.QuoteId" Title="@L[_quoteversionDto.GetMemberDescription(x=>x.QuoteId)]" />
                <PropertyColumn Property="x => x.VersionNumber" Title="@L[_quoteversionDto.GetMemberDescription(x=>x.VersionNumber)]" />
                <PropertyColumn Property="x => x.CreatedAtUtc" Title="@L[_quoteversionDto.GetMemberDescription(x=>x.CreatedAtUtc)]" />
                <PropertyColumn Property="x => x.CreatedByEmployeeId" Title="@L[_quoteversionDto.GetMemberDescription(x=>x.CreatedByEmployeeId)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<QuoteVersionDto> _selectedQuoteVersions = new HashSet<QuoteVersionDto>();
    private MudDataGrid<QuoteVersionDto> _quoteversionsGrid = default!;
    private QuoteVersionDto _quoteversionDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private QuoteVersionsWithPaginationQuery _quoteversionsQuery { get; set; } = new();
    private QuoteVersionsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_quoteversionDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<QuoteVersionsAccessRights>(); 
    }
     
    private async Task<GridData<QuoteVersionDto>> ServerReload(GridState<QuoteVersionDto> state)
    {
        try
        {
            _loading = true;
            _quoteversionsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _quoteversionsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _quoteversionsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _quoteversionsQuery.PageNumber = state.Page + 1;
            _quoteversionsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_quoteversionsQuery).ConfigureAwait(false);
            return new GridData<QuoteVersionDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedQuoteVersions.Clear();
        _quoteversionsQuery.Keyword = text;
        await _quoteversionsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(QuoteVersionListView listview)
    {
        _quoteversionsQuery.ListView = listview;
        await _quoteversionsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        QuoteVersionCacheKey.Refresh();
        _selectedQuoteVersions.Clear();
        _quoteversionsQuery.Keyword  = string.Empty;
        await _quoteversionsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditQuoteVersionCommand command)
    {
        var parameters = new DialogParameters<QuoteVersionFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<QuoteVersionFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _quoteversionsGrid.ReloadServerData();
            _selectedQuoteVersions.Clear();
        }
    }
    private void OnDataGridRowClick(QuoteVersionDto dto)
    {
        Navigation.NavigateTo($"/pages/quoteversions/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditQuoteVersionCommand();
        await ShowEditFormDialog(L["New QuoteVersion"], command);
    }
    private async Task OnCloneQuoteVersion()
    {
        var dto = _selectedQuoteVersions.First();
        var command = new AddEditQuoteVersionCommand()
        {
                    QuoteId = dto.QuoteId, 
        VersionNumber = dto.VersionNumber, 
        CreatedAtUtc = dto.CreatedAtUtc, 
        CreatedByEmployeeId = dto.CreatedByEmployeeId, 

        };
        await ShowEditFormDialog(L["Clone QuoteVersion"], command);
    }
    private async Task OnEditQuoteVersion(QuoteVersionDto dto)
    {
       //var command = Mapper.Map<AddEditQuoteVersionCommand>(dto);
       //await ShowEditFormDialog(L["Edit QuoteVersion"], command);
       Navigation.NavigateTo($"/pages/quoteversions/edit/{dto.Id}");
    }

    private async Task OnDeleteQuoteVersion(QuoteVersionDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteQuoteVersionCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteversionsGrid.ReloadServerData();
                _selectedQuoteVersions.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedQuoteVersions()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedQuoteVersions.Count);
        var command = new DeleteQuoteVersionCommand(_selectedQuoteVersions.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quoteversionsGrid.ReloadServerData();
                _selectedQuoteVersions.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportQuoteVersionsQuery()
            {
                Keyword = _quoteversionsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _quoteversionsQuery.ListView,
                OrderBy = _quoteversionsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_quoteversionsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["QuoteVersions"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportQuoteVersionsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _quoteversionsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
