@page "/pages/servicecategories"

@using CleanArchitecture.Blazor.Application.Features.ServiceCategories.Caching
@using CleanArchitecture.Blazor.Application.Features.ServiceCategories.DTOs
@using CleanArchitecture.Blazor.Application.Features.ServiceCategories.Specifications
@using CleanArchitecture.Blazor.Application.Features.ServiceCategories.Commands.Delete

