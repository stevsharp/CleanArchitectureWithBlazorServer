    private async Task OnDeleteServiceCategory(ServiceCategoryDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteServiceCategoryCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicecategoriesGrid.ReloadServerData();
                _selectedServiceCategories.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedServiceCategories()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedServiceCategories.Count);
        var command = new DeleteServiceCategoryCommand(_selectedServiceCategories.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _servicecategoriesGrid.ReloadServerData();
                _selectedServiceCategories.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportServiceCategoriesQuery()
            {
                Keyword = _servicecategoriesQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _servicecategoriesQuery.ListView,
                OrderBy = _servicecategoriesGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_servicecategoriesGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["ServiceCategories"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
