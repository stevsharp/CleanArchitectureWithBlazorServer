    protected override async Task OnInitializedAsync()
    {
        Title = L[_servicecategoryDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<ServiceCategoriesAccessRights>(); 
    }
     
    private async Task<GridData<ServiceCategoryDto>> ServerReload(GridState<ServiceCategoryDto> state)
    {
        try
        {
            _loading = true;
            _servicecategoriesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _servicecategoriesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _servicecategoriesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _servicecategoriesQuery.PageNumber = state.Page + 1;
            _servicecategoriesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_servicecategoriesQuery).ConfigureAwait(false);
            return new GridData<ServiceCategoryDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedServiceCategories.Clear();
        _servicecategoriesQuery.Keyword = text;
        await _servicecategoriesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(ServiceCategoryListView listview)
    {
        _servicecategoriesQuery.ListView = listview;
        await _servicecategoriesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        ServiceCategoryCacheKey.Refresh();
        _selectedServiceCategories.Clear();
        _servicecategoriesQuery.Keyword  = string.Empty;
        await _servicecategoriesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditServiceCategoryCommand command)
    {
        var parameters = new DialogParameters<ServiceCategoryFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<ServiceCategoryFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _servicecategoriesGrid.ReloadServerData();
            _selectedServiceCategories.Clear();
        }
    }
    private void OnDataGridRowClick(ServiceCategoryDto dto)
    {
        Navigation.NavigateTo($"/pages/servicecategories/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditServiceCategoryCommand();
        await ShowEditFormDialog(L["New ServiceCategory"], command);
    }
    private async Task OnCloneServiceCategory()
    {
        var dto = _selectedServiceCategories.First();
        var command = new AddEditServiceCategoryCommand()
        {
                    Name = dto.Name, 
        Description = dto.Description, 

        };
        await ShowEditFormDialog(L["Clone ServiceCategory"], command);
    }
    private async Task OnEditServiceCategory(ServiceCategoryDto dto)
    {
       //var command = Mapper.Map<AddEditServiceCategoryCommand>(dto);
       //await ShowEditFormDialog(L["Edit ServiceCategory"], command);
       Navigation.NavigateTo($"/pages/servicecategories/edit/{dto.Id}");
