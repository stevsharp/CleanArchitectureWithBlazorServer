@page "/pages/equipmentitems"

@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Caching
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.DTOs
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Specifications
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.EquipmentItems.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.EquipmentItems.Components

@inject IStringLocalizer<EquipmentItems> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.EquipmentItems.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="EquipmentItemDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedEquipmentItems"
                  Hover="true" @ref="_equipmentitemsGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="EquipmentItemListView" ValueChanged="OnListViewChanged" Value="_equipmentitemsQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedEquipmentItems.Count != 1)" OnClick="OnCloneEquipmentItem">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedEquipmentItems.Count > 0))"
                                         OnClick="OnDeleteSelectedEquipmentItems">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_equipmentitemsQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditEquipmentItem(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteEquipmentItem(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                <PropertyColumn Property="x => x.Name" Title="@L[_equipmentitemDto.GetMemberDescription(x=>x.Name)]"> 
   <CellTemplate>
      <div class="d-flex flex-column">
        <MudText Typo="Typo.body1">@context.Item.Name</MudText>
     </div>
    </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.Category" Title="@L[_equipmentitemDto.GetMemberDescription(x=>x.Category)]" />
                <PropertyColumn Property="x => x.DailyRate" Title="@L[_equipmentitemDto.GetMemberDescription(x=>x.DailyRate)]" />
                <PropertyColumn Property="x => x.PurchaseCost" Title="@L[_equipmentitemDto.GetMemberDescription(x=>x.PurchaseCost)]" />
                <PropertyColumn Property="x => x.VendorId" Title="@L[_equipmentitemDto.GetMemberDescription(x=>x.VendorId)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<EquipmentItemDto> _selectedEquipmentItems = new HashSet<EquipmentItemDto>();
    private MudDataGrid<EquipmentItemDto> _equipmentitemsGrid = default!;
    private EquipmentItemDto _equipmentitemDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private EquipmentItemsWithPaginationQuery _equipmentitemsQuery { get; set; } = new();
    private EquipmentItemsAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_equipmentitemDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<EquipmentItemsAccessRights>(); 
    }
     
    private async Task<GridData<EquipmentItemDto>> ServerReload(GridState<EquipmentItemDto> state)
    {
        try
        {
            _loading = true;
            _equipmentitemsQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _equipmentitemsQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _equipmentitemsQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _equipmentitemsQuery.PageNumber = state.Page + 1;
            _equipmentitemsQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_equipmentitemsQuery).ConfigureAwait(false);
            return new GridData<EquipmentItemDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedEquipmentItems.Clear();
        _equipmentitemsQuery.Keyword = text;
        await _equipmentitemsGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(EquipmentItemListView listview)
    {
        _equipmentitemsQuery.ListView = listview;
        await _equipmentitemsGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        EquipmentItemCacheKey.Refresh();
        _selectedEquipmentItems.Clear();
        _equipmentitemsQuery.Keyword  = string.Empty;
        await _equipmentitemsGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditEquipmentItemCommand command)
    {
        var parameters = new DialogParameters<EquipmentItemFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<EquipmentItemFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _equipmentitemsGrid.ReloadServerData();
            _selectedEquipmentItems.Clear();
        }
    }
    private void OnDataGridRowClick(EquipmentItemDto dto)
    {
        Navigation.NavigateTo($"/pages/equipmentitems/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditEquipmentItemCommand();
        await ShowEditFormDialog(L["New EquipmentItem"], command);
    }
    private async Task OnCloneEquipmentItem()
    {
        var dto = _selectedEquipmentItems.First();
        var command = new AddEditEquipmentItemCommand()
        {
                    Name = dto.Name, 
        Category = dto.Category, 
        DailyRate = dto.DailyRate, 
        PurchaseCost = dto.PurchaseCost, 
        VendorId = dto.VendorId, 

        };
        await ShowEditFormDialog(L["Clone EquipmentItem"], command);
    }
    private async Task OnEditEquipmentItem(EquipmentItemDto dto)
    {
       //var command = Mapper.Map<AddEditEquipmentItemCommand>(dto);
       //await ShowEditFormDialog(L["Edit EquipmentItem"], command);
       Navigation.NavigateTo($"/pages/equipmentitems/edit/{dto.Id}");
    }

    private async Task OnDeleteEquipmentItem(EquipmentItemDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteEquipmentItemCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _equipmentitemsGrid.ReloadServerData();
                _selectedEquipmentItems.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedEquipmentItems()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedEquipmentItems.Count);
        var command = new DeleteEquipmentItemCommand(_selectedEquipmentItems.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _equipmentitemsGrid.ReloadServerData();
                _selectedEquipmentItems.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportEquipmentItemsQuery()
            {
                Keyword = _equipmentitemsQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _equipmentitemsQuery.ListView,
                OrderBy = _equipmentitemsGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_equipmentitemsGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["EquipmentItems"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportEquipmentItemsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _equipmentitemsGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
