@page "/pages/quotes"

@using CleanArchitecture.Blazor.Application.Features.Quotes.Caching
@using CleanArchitecture.Blazor.Application.Features.Quotes.DTOs
@using CleanArchitecture.Blazor.Application.Features.Quotes.Specifications
@using CleanArchitecture.Blazor.Application.Features.Quotes.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Quotes.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.Quotes.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Quotes.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Quotes.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.Quotes.Components

@inject IStringLocalizer<Quotes> L
@inject BlazorDownloadFileService BlazorDownloadFileService

@attribute [Authorize(Policy = Permissions.Quotes.View)]
<PageTitle>@Title</PageTitle>

<MudDataGrid ServerData="@(ServerReload)"
                  FixedHeader="true"
                  FixedFooter="false"
                  Virtualize="false"
                  @bind-RowsPerPage="_defaultPageSize"
                  Loading="@_loading"
                  MultiSelection="true"
                  T="QuoteDto"
                  SelectOnRowClick="false"
                  RowClick="@(s=>OnDataGridRowClick(s.Item))"
                  @bind-SelectedItems="_selectedQuotes"
                  Hover="true" @ref="_quotesGrid">
            <ToolBarContent>
                 <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="QuoteListView" ValueChanged="OnListViewChanged" Value="_quotesQuery.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_accessRights.Create)
                    {
                        <MudButton StartIcon="@Icons.Material.Outlined.Add"
                                   OnClick="OnCreate">
                            @ConstantString.New
                        </MudButton>
                    }
                    <MudMenu TransformOrigin="Origin.BottomRight" AnchorOrigin="Origin.BottomRight" EndIcon="@Icons.Material.Filled.MoreVert" Label="@ConstantString.More">
                        @if (_accessRights.Create)
                        {
                            <MudMenuItem Disabled="@(_selectedQuotes.Count != 1)" OnClick="OnCloneQuote">@ConstantString.Clone</MudMenuItem>
                        }
                        @if (_accessRights.Delete)
                        {
                            <MudMenuItem Disabled="@(!(_selectedQuotes.Count > 0))"
                                         OnClick="OnDeleteSelectedQuotes">
                                @ConstantString.Delete
                            </MudMenuItem>
                        }
                        @if (_accessRights.Export)
                        {
                            <MudMenuItem Disabled="@_exporting"
                                         OnClick="OnExport">
                                @ConstantString.Export
                            </MudMenuItem>
                        }
                        @if (_accessRights.Import)
                        {
                            <MudMenuItem>
                                <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                    <ActivatorContent>
                                        <MudButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                   Variant="Variant.Text"
                                                   Disabled="@_uploading">
                                            @ConstantString.Import
                                        </MudButton>
                                    </ActivatorContent>
                                </MudFileUpload>
                            </MudMenuItem>
                        }
                    </MudMenu>
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_accessRights.Search)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@_quotesQuery.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
            </ToolBarContent>
            <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                <TemplateColumn HeaderStyle="width:60px" Title="@ConstantString.Actions" Sortable="false">
                    <CellTemplate>
                        @if (_accessRights.Edit || _accessRights.Delete)
                        {
                            <MudMenu Icon="@Icons.Material.Filled.Edit" Variant="Variant.Filled" Size="Size.Small"
                                     Dense="true"
                                     EndIcon="@Icons.Material.Filled.KeyboardArrowDown" IconColor="Color.Info" AnchorOrigin="Origin.CenterLeft">
                                @if (_accessRights.Edit)
                                {
                                    <MudMenuItem OnClick="@(()=>OnEditQuote(context.Item))">@ConstantString.Edit</MudMenuItem>
                                }
                                @if (_accessRights.Delete)
                                {
                                    <MudMenuItem OnClick="@(()=>OnDeleteQuote(context.Item))">@ConstantString.Delete</MudMenuItem>
                                }
                            </MudMenu>
                        }
                        else
                        {
                            <MudIconButton Variant="Variant.Filled"  
                                       Disabled="true"
                                       Icon="@Icons.Material.Filled.DoNotTouch"
                                       Size="Size.Small"
                                       Color="Color.Surface">
                                @ConstantString.NoAllowed
                            </MudIconButton>
                        }
                    </CellTemplate>
                </TemplateColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                                <PropertyColumn Property="x => x.CompanyId" Title="@L[_quoteDto.GetMemberDescription(x=>x.CompanyId)]" />
                <PropertyColumn Property="x => x.Title" Title="@L[_quoteDto.GetMemberDescription(x=>x.Title)]" />
                <PropertyColumn Property="x => x.OwnerId" Title="@L[_quoteDto.GetMemberDescription(x=>x.OwnerId)]" />
                <PropertyColumn Property="x => x.Status" Title="@L[_quoteDto.GetMemberDescription(x=>x.Status)]">
                <CellTemplate>
						<MudChip T="string"  Value="@context.Item.Status?.GetDescription()" />
                </CellTemplate>
</PropertyColumn>
                <PropertyColumn Property="x => x.ValidUntil" Title="@L[_quoteDto.GetMemberDescription(x=>x.ValidUntil)]" />
                <PropertyColumn Property="x => x.Currency" Title="@L[_quoteDto.GetMemberDescription(x=>x.Currency)]" />
                <PropertyColumn Property="x => x.TotalAmount" Title="@L[_quoteDto.GetMemberDescription(x=>x.TotalAmount)]" />
                <PropertyColumn Property="x => x.MarginPct" Title="@L[_quoteDto.GetMemberDescription(x=>x.MarginPct)]" />

            </Columns>
            <NoRecordsContent>
                <MudText>@ConstantString.NoRecords</MudText>
            </NoRecordsContent>
            <LoadingContent>
                <MudText>@ConstantString.Loading</MudText>
            </LoadingContent>
            <PagerContent>
                <MudDataGridPager PageSizeOptions="@(new int[]{10,15,30,50,100,500,1000})" />
            </PagerContent>
</MudDataGrid>



@code {
    public string? Title { get; private set; }
    private int _defaultPageSize = 15;
    private HashSet<QuoteDto> _selectedQuotes = new HashSet<QuoteDto>();
    private MudDataGrid<QuoteDto> _quotesGrid = default!;
    private QuoteDto _quoteDto = new();
    private bool _loading;
    private bool _uploading;
    private bool _exporting;
    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }


    private QuotesWithPaginationQuery _quotesQuery { get; set; } = new();
    private QuotesAccessRights _accessRights = new();

    protected override async Task OnInitializedAsync()
    {
        Title = L[_quoteDto.GetClassDescription()];
        _accessRights = await PermissionService.GetAccessRightsAsync<QuotesAccessRights>(); 
    }
     
    private async Task<GridData<QuoteDto>> ServerReload(GridState<QuoteDto> state)
    {
        try
        {
            _loading = true;
            _quotesQuery.CurrentUser = UserProfile;
            var sortDefinition = state.SortDefinitions.FirstOrDefault();
            _quotesQuery.OrderBy = sortDefinition?.SortBy ?? "Id";
            _quotesQuery.SortDirection = (sortDefinition != null && sortDefinition.Descending)
                                      ? SortDirection.Descending.ToString()
                                      : SortDirection.Ascending.ToString();
            _quotesQuery.PageNumber = state.Page + 1;
            _quotesQuery.PageSize = state.PageSize;
            var result = await Mediator.Send(_quotesQuery).ConfigureAwait(false);
            return new GridData<QuoteDto>() { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedQuotes.Clear();
        _quotesQuery.Keyword = text;
        await _quotesGrid.ReloadServerData();
    }
    private async Task OnListViewChanged(QuoteListView listview)
    {
        _quotesQuery.ListView = listview;
        await _quotesGrid.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        QuoteCacheKey.Refresh();
        _selectedQuotes.Clear();
        _quotesQuery.Keyword  = string.Empty;
        await _quotesGrid.ReloadServerData();
    }
    private async Task ShowEditFormDialog(string title, AddEditQuoteCommand command)
    {
        var parameters = new DialogParameters<QuoteFormDialog>
            {
                { x=>x._model,command },
            };
        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Medium, FullWidth = true };
        var dialog = await DialogService.ShowAsync<QuoteFormDialog>(title, parameters, options);
        var state = await dialog.Result;

        if (state != null && !state.Canceled)
        {
            await _quotesGrid.ReloadServerData();
            _selectedQuotes.Clear();
        }
    }
    private void OnDataGridRowClick(QuoteDto dto)
    {
        Navigation.NavigateTo($"/pages/quotes/view/{dto.Id}");
    }
    private async Task OnCreate()
    {
        var command = new AddEditQuoteCommand();
        await ShowEditFormDialog(L["New Quote"], command);
    }
    private async Task OnCloneQuote()
    {
        var dto = _selectedQuotes.First();
        var command = new AddEditQuoteCommand()
        {
                    CompanyId = dto.CompanyId, 
        Title = dto.Title, 
        OwnerId = dto.OwnerId, 
        ValidUntil = dto.ValidUntil, 
        Currency = dto.Currency, 
        TotalAmount = dto.TotalAmount, 
        MarginPct = dto.MarginPct, 
        Status = dto.Status, 

        };
        await ShowEditFormDialog(L["Clone Quote"], command);
    }
    private async Task OnEditQuote(QuoteDto dto)
    {
       //var command = Mapper.Map<AddEditQuoteCommand>(dto);
       //await ShowEditFormDialog(L["Edit Quote"], command);
       Navigation.NavigateTo($"/pages/quotes/edit/{dto.Id}");
    }

    private async Task OnDeleteQuote(QuoteDto dto)
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, dto.Name);
        var command = new DeleteQuoteCommand(new int[] { dto.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quotesGrid.ReloadServerData();
                _selectedQuotes.Clear();
            });
        });
    }

    private async Task OnDeleteSelectedQuotes()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedQuotes.Count);
        var command = new DeleteQuoteCommand(_selectedQuotes.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText,async () =>
        {
            await InvokeAsync(async () =>
            {
                await _quotesGrid.ReloadServerData();
                _selectedQuotes.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportQuotesQuery()
            {
                Keyword = _quotesQuery.Keyword,
                CurrentUser = UserProfile,
                ListView = _quotesQuery.ListView,
                OrderBy = _quotesGrid.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = (_quotesGrid.SortDefinitions.Values.FirstOrDefault()?.Descending ?? true) ? SortDirection.Descending.ToString() : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.MatchAsync(
            async data =>
            {
                await BlazorDownloadFileService.DownloadFileAsync($"{L["Quotes"]}.xlsx", result.Data, contentType:"application/octet-stream");
                Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportQuotesCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        await result.MatchAsync(
            async data =>
            {
                await _quotesGrid.ReloadServerData();
                Snackbar.Add($"{ConstantString.ImportSuccess}", MudBlazor.Severity.Info);
            }, errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _uploading = false;
    }

}
